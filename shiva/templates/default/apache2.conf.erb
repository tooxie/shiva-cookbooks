<VirtualHost *>
    ServerName 127.0.0.1

    LoadModule wsgi_module modules/mod_wsgi.so

    WSGIDaemonProcess shiva user=shiva group=opsworks threads=5
    WSGIScriptAlias / <%= @wsgi_path %>

    <Directory <%= @shiva_path %>>
        WSGIProcessGroup shiva
        WSGIApplicationGroup %{GLOBAL}
        Order deny,allow
        Allow from all
    </Directory>
</VirtualHost>
